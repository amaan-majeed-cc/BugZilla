<% if @user %>
<h1>Home</h1>
<%if @tickets_assigned.any? %>
    <% @tickets_assigned.each do |ticket| %>
        <h3><%= link_to ticket.title, project_ticket_path(id: ticket.id, project_id: ticket.project) %></h3>

        <p>Description: <%= ticket.description %></p>
        <p>deadline: <%= ticket.deadline %></p>
        <p>ticket_type: <%= ticket.ticket_type %></p>
        <p>status: <%= ticket.status %></p>
        <p>creator: <%= ticket.creator.name %></p>
        <p>developer: <%= ticket.developer.name %></p>
        <p>Project: <%= ticket.project.name %></p>

        <%= link_to "Edit Ticket", edit_project_ticket_path(project_id: ticket.project.id ,id: ticket.id) %>
    <% end %>

<% else %>
    <h3>No tickets Assigned</h3>
<% end %>

<% else %>
<h1>Login To view the Tickets</h1>
<%end%>